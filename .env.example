# Flask Backend Template - Environment Configuration
# Copy this file to .env and update with your values

# ============================================
# Application Settings
# ============================================
APP_NAME="Flask Backend Template"
FLASK_ENV=development
DEBUG=True

# ============================================
# Security Settings
# ============================================
SECRET_KEY=your-secret-key-change-in-production-use-secrets-token-hex-32

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-use-secrets-token-hex-32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Encryption (Fernet - must be 32 url-safe base64-encoded bytes)
ENCRYPTION_KEY=your-encryption-key-change-in-production-use-fernet-generate-key

# ============================================
# Database Settings
# ============================================
DATABASE_URL=sqlite:///app.db
# For PostgreSQL: postgresql://user:password@localhost:5432/dbname
# For MySQL: mysql://user:password@localhost:3306/dbname

# ============================================
# Password & Argon2 Settings
# ============================================
PASSWORD_MIN_LENGTH=8
ARGON2_TIME_COST=2
ARGON2_MEMORY_COST=65536
ARGON2_PARALLELISM=2

# ============================================
# CORS Settings
# ============================================
CORS_ORIGINS=*
# For production, specify allowed origins: http://localhost:3000,https://yourdomain.com

# ============================================
# Caching Settings
# ============================================
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# ============================================
# Testing
# ============================================
TESTING=False

# ============================================
# API Documentation
# ============================================
API_TITLE="Flask Backend Template API"
API_VERSION=1.0.0
OPENAPI_VERSION=3.0.3
OPENAPI_URL_PREFIX=/api/docs
OPENAPI_SWAGGER_UI_PATH=/swagger
OPENAPI_SWAGGER_UI_URL=https://cdn.jsdelivr.net/npm/swagger-ui-dist/
